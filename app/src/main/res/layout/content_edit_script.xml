<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:onClick="SetTimeOnClick">
            <TextView
                android:text="@string/es_SetName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/es_set_tiitle_main"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="@string/es_enterScriptTitle"
                android:ems="10"
                android:id="@+id/es_set_tiitle_sub" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"
            android:layout_below="@+id/es_set_tiitle_main"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:onClick="SetTimeOnClick">
            <TextView
                android:text="@string/es_SetTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/es_set_time_main"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:text="@string/es_notSelected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/es_set_time_sub"
                android:layout_below="@+id/es_set_time_main"
                android:textSize="15sp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"
            android:layout_below="@+id/es_set_time_sub"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:onClick="SetDayOnClick">
        <TextView
            android:text="@string/es_SetDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/es_set_day_main"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:text="@string/es_notSelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/es_set_day_sub"
            android:layout_below="@+id/es_set_day_main"
            android:textSize="15sp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"
            android:layout_below="@+id/es_set_day_sub"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:onClick="SetLocationOnClick">
            <TextView
                android:text="@string/es_SetLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/es_set_location_main"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:text="@string/es_notSelected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/es_set_location_sub"
                android:layout_below="@+id/es_set_location_main"
                android:textSize="15sp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"
            android:layout_below="@+id/es_set_day_sub"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:onClick="SetActionOnClick">
            <TextView
                android:text="@string/es_SetAction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/es_set_action_main"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:text="@string/es_notSelected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/es_set_action_sub"
                android:layout_below="@+id/es_set_action_main"
                android:textSize="15sp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"
            android:layout_below="@+id/es_set_day_sub"/>
    </LinearLayout>
</ScrollView>