<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pl.kit.context_aware.lemur.ImportExportFragment">


    <TextView
        android:text="@string/ie_instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ie_instruction"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/ie_instruction"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="@string/ie_export"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ImportScriptButton"
            android:onClick="ExportScriptButtonOnClick"
            android:layout_weight="1" />

        <Button
            android:text="@string/ie_import"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ExportScriptButton"
            android:onClick="ImportScriptButtonOnClick"
            android:layout_weight="1" />
    </LinearLayout>

</RelativeLayout>

